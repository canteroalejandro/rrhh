= form_for @usuario, :html => {:class => "form-horizontal"} do |f|
  - if @usuario.errors.any?
    #error_explanation
      h2 = "#{pluralize(@usuario.errors.count, "error")} #{pluralize_without_count(@usuario.errors.count, "prohibe", "prohiben")} almacenar este Usuario:"
      ul
        - @usuario.errors.full_messages.each do |message|
          li = message

  .form-group
    = f.label :empleado_id, 'Elegir Empleado:', {class: "col-sm-3 control-label"}
    = f.collection_select :empleado_id, Empleado.all, :id, :nombre_y_apellido
  .form-group
    = f.label :userName, 'Nombre de Usuario: ', {class: "col-sm-3 control-label"}
    = f.text_field :userName
  .form-group
    = f.label :password, 'Contrase√±a: ', {class: "col-sm-3 control-label"}
    = f.password_field :password
  .form-group
    = f.label :rol_id, 'Rol:', {class: "col-sm-3 control-label"}
    = f.collection_select :rol_id, Rol.all, :id, :nombre
  .clearfix.form-actions
    .col-md-offset-3.col-md-9
      = f.submit "Crear Usuario", class: "btn btn-info"
