= form_for [@historia_medica.empleado, @historia_medica] do |f|
  - if @historia_medica.errors.any?
    #error_explanation
      h2 = "#{pluralize(@historia_medica.errors.count, "error")} #{pluralize_without_count(@historia_medica.errors.count, "prohibe", "prohiben")} almacenar esta Historia MÃ©dica:"
      ul
        - @historia_medica.errors.full_messages.each do |message|
          li = message

  .field
    = f.label :codigo
    = f.text_field :codigo
  .field
    = f.label :fecha
    = f.date_select :fecha
  .field
    = f.label :doctor
    = f.text_field :doctor
  .actions = f.submit
